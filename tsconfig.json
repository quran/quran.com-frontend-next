{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "incremental": true,
    "paths": {
      "@/icons/*": ["./public/icons/*"],
      "@/public/*": ["./public/*"],
      "@/dls/*": ["./src/components/dls/*"],
      "@/data/*": ["./data/*"],
      "@/types/*": ["./types/*"],
      "@/tests/*": ["./tests/*"],
      "@/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".svg"
  ]
}
