{
    "customSyntax": "postcss-scss",
    "plugins": [
        "stylelint-scss",
        "stylelint-prettier",
        "stylelint-use-logical"
    ],
    "rules": {
        "prettier/prettier": true,
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "csstools/use-logical": true
    }
}